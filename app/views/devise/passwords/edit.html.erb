<h2>パスワード再設定</h2>

<%= render "devise/shared/error_messages", resource: resource %>

<%= form_with model: resource, as: resource_name, url: password_path(resource_name), local: true do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div>
    <%= f.label :password, t("devise.passwords.edit.new_password") %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation, t("devise.passwords.edit.confirm_new_password") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.submit t("devise.passwords.edit.change_my_password") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
