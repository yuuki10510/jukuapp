<h2>新規登録</h2>

<%= render "shared/validation_errors", resource: resource %>

<%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
  <%= f.hidden_field :role, value: params[:role] %>
  
  <div>
    <%= f.label :name <br/>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <% unless params[:role] == "student" %>
    <div>
      <%= f.label :email <br/>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>
  <% end %>

  <div>
    <%= f.label :password <br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation <br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.submit t("devise.registrations.new.sign_up") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
