<h1 class="profile-edit-title">プロフィール編集</h1>

<div class="profile-edit-container">
  <%= form_with model: @user, url: profile_path, local: true, class: "profile-edit-form" do |f| %>

    <div class="profile-form-group">
      <%= f.label :name, "名前", class: "profile-form-label" %>
      <%= f.text_field :name, class: "profile-form-input" %>
    </div>

    <div class="profile-form-group">
      <%= f.label :email, "メールアドレス", class: "profile-form-label" %>
      <%= f.email_field :email, class: "profile-form-input" %>
      <p class="profile-form-help">ログインIDとしても使用されます。</p>
    </div>

    <div class="profile-form-actions">
      <%= f.submit "更新する", class: "profile-save-btn" %>
      <%= link_to "戻る", profile_path, class: "profile-cancel-btn" %>
    </div>

  <% end %>
</div>