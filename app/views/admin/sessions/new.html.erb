<h2 class="admin-login-title">管理者ログイン</h2>

<%= render "devise/shared/error_messages", resource: @user %>

<div class="admin-login-container">
  <%= form_with url: admin_login_path, local: true, class: "admin-login-form" do |f| %>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= f.submit "ログイン", class: "primary-button" %>
    </div>

  <% end %>

  <hr class="divider">

  <div class="guest-login">
    <%= button_to "ゲスト管理者でログイン",
          admin_guest_login_path,
          method: :post,
          class: "secondary-button" %>
  </div>
</div>