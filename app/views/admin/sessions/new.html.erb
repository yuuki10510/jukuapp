<!-- app/views/admin/sessions/new.html.erb -->

<div class="login-page">

  <div class="login-header">
    <h1 class="app-title">塾アプリ</h1>
    <p class="app-subtitle">管理者ログイン</p>
  </div>

  <div class="login-card">

    <h2 class="login-title">
      <span class="login-title-bar"></span>
      管理者ログイン
    </h2>

    <%= render "shared/validation_errors", resource: @user %>

    <%= form_with url: admin_login_path, local: true do |f| %>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password,
              autocomplete: "current-password",
              class: "form-input" %>
      </div>

      <div class="form-actions">
        <%= f.submit "ログイン", class: "primary-button" %>
      </div>

    <% end %>

    <div class="login-divider">
      <span>または</span>
    </div>

    <div class="guest-login">
      <%= button_to "ゲスト管理者でログイン",
            admin_guest_login_path,
            method: :post,
            class: "secondary-button" %>
    </div>

  </div>
</div>