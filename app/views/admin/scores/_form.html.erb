<%= form_with model: [@student, @score], local: true do |f| %>
  <div>
    <%= f.label :subject %>
    <%= f.select :subject, Score.subjects.keys.map { |k| [k.humanize, k] } %>
  </div>

  <div>
    <%= f.label :score %>
    <%= f.number_field :score %>
  </div>

  <div>
    <%= f.label :test_type %>
    <%= f.select :test_type, Score.test_types.keys.map { |k| [k.humanize, k] } %>
  </div>

  <div>
    <%= f.label :term %>
    <%= f.select :term, Score.terms.keys.map { |k| [k.humanize, k] } %>
  </div>

  <%= f.submit %>
<% end %>
